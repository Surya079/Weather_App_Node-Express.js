<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstrap CSS CDN File -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/fontawesome.min.css" integrity="sha512-UuQ/zJlbMVAw/UU8vVBhnI4op+/tFOpQZVT+FormmIEhRSCnJWyHiBbEVgM4Uztsht41f3FzVWgLuwzUqOObKw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" href="/styles/main.css">
    <title>Weather APP</title> 
</head>
<body>
    <div class="row px-3 text-center mt-5">
            <form action="/" method="POST">
                <input type="text"  name="City" placeholder="Another location" class="mb-5 ">
                <button class="search-btn  mb-5 mr-0 text-center btn-danger " type="submit"><i class='bx bx-search'></i></button>
             <% if (locals.content) { %>
             <p class=" text-white pb-5"><%= content %></p>
            <% } %>
        </form>
           
        </div>
    <div class='wrapper'>
        
        <div class='box'></div>
        <div class='box_inner_shadow'></div>
        <div class='box_inner'></div>
        <div class='box_inner_tri_shadow'></div>
        <div class='box_inner_tri'></div>
        <div class='location'></div>
        <div class='mountain1'></div>
        <div class='mountain2'></div>
        <div class='tri1'></div>
        <div class='tri2'></div>
        
        <div class='time text-dark'>
            <% if (locals.curTime) { %>
             <%= curTime %>
            <% } %>
              
        </div>
        <div class='date text-dark'>
            <% if (locals.dayName && locals.date) { %>
             <%= dayName   %> - <%= date %>
            <% }  %>
                            
        </div>
        <div class='cloud '></div>
        <div class='temp text-dark'>
           <% if (locals.temp) { %>
             <%= temp %>&deg;C
             <% } %>
    
        </div>
        <div class='cond text-dark'>
            <% if (locals.weather) { %>
                <%= weather %>
            <% }  %>
               
    </div>
        <div class='loc text-dark'>
            <% if (locals.city) { %>
             <%= city %>
             <% }  %>
              
        </div>
      </div>
   
 <!-- Bootstrap JS CDN File -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>

</html>